{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/((?!api/.*).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    { "path": "/api/maintenance/recurring/run", "schedule": "0 * * * *" },
    { "path": "/api/admin/exports/nightly", "schedule": "0 2 * * *" },
    { "path": "/api/cron/rent-reminders", "schedule": "0 0 * * *" },
    { "path": "/api/cron/lease-expiry", "schedule": "0 1 * * *" }
  ]
}